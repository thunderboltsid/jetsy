<div class="jumbotron jumbotron-banner">
  <h1>Buy & Sell</h1>
  <h2>An online trading platform<br> for the Jacobs community</h2>
</div>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
        <div class="col-lg-4 col-md-4">
          <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= listing.description %></p>
              <p><%= number_to_currency(listing.price, :locale => :en) %></p>
              <p><%= "Sold by #{listing.user.name}" %> </p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<br>